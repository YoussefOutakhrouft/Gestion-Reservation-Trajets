<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafx_project.GestController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Sidebar (Left) -->
    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #343a40; -fx-padding: 10;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Gestionnaire Panel" />
                <Button fx:id="mesTachesBtn" onAction="#showMesTaches" prefWidth="180.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-margin: 5;" text="Mes Tâches" />
                <Button fx:id="reservationsBtn" onAction="#showReservations" prefWidth="180.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-margin: 5;" text="Voir Réservations" />
                <Button fx:id="logoutBtn" onAction="#logout" prefWidth="180.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-margin: 5;" text="Déconnexion" />
            </children>
        </VBox>
    </left>
    <!-- Contenu central (Center) - Dynamique -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <children>
                <Label fx:id="contentLabel" style="-fx-font-size: 24px; -fx-text-fill: #333333;" text="Bienvenue dans l'interface Gestionnaire !" />

                <!-- Section Recherche Trajet -->
                <Label text="Rechercher un Trajet" style="-fx-font-size: 18px;" />
                <HBox spacing="10.0">
                    <TextField fx:id="villeDepartField" promptText="Ville de Départ" />
                    <TextField fx:id="villeArriveeField" promptText="Ville d'Arrivée" />
                    <DatePicker fx:id="datePicker" promptText="Date" />
                    <Button fx:id="searchBtn" onAction="#searchTrajets" text="Rechercher" />
                </HBox>

                <!-- Liste des Trajets (TableView) -->
                <TableView fx:id="trajetsTable" prefHeight="200.0">
                    <columns>
                        <TableColumn text="ID" fx:id="trajetIdCol" />
                        <TableColumn text="Départ" fx:id="villeDepartCol" />
                        <TableColumn text="Arrivée" fx:id="villeArriveeCol" />
                        <TableColumn text="Date" fx:id="dateCol" />
                        <TableColumn text="Places Restantes" fx:id="placesCol" />
                    </columns>
                </TableView>
                <!-- Section Réservation -->
                <Label text="Réserver un Billet" style="-fx-font-size: 18px;" />
                <VBox spacing="10.0">
                    <HBox spacing="10.0">
                        <TextField fx:id="nomField" promptText="Nom" />
                        <TextField fx:id="prenomField" promptText="Prénom" />
                        <TextField fx:id="cinField" promptText="CIN" />
                        <TextField fx:id="placeField" promptText="Numéro de Place" />
                    </HBox>
                    <ComboBox fx:id="segmentComboBox" promptText="Sélectionnez un segment" prefWidth="300.0" />
                    <Button fx:id="reserverBtn" onAction="#reserverBillet" text="Réserver" />
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
